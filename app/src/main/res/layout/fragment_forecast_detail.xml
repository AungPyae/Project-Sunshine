<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable
            name="weatherStatus"
            type="net.aung.sunshine.data.vos.WeatherStatusVO" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="@dimen/margin_medium_2"
            tools:context="net.aung.sunshine.fragments.ForecastDetailFragment">

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_heading_1x"
                android:text="@{weatherStatus.day}"
                tools:text="Tomorrow" />

            <TextView
                android:id="@+id/tv_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:fontFamily="sans-serif-condensed"
                android:textSize="@dimen/text_regular_2x"
                android:text="@{weatherStatus.detailDate}"
                tools:text="December 16" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium_2"
                android:columnCount="2"
                android:rowCount="2"
                android:paddingLeft="@dimen/weather_detail_body_padding"
                android:paddingRight="@dimen/weather_detail_body_padding">

                <TextView
                    android:id="@+id/tv_max_temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:textSize="@dimen/text_max_temperature_detail"
                    android:textColor="@android:color/black"
                    android:text="@{weatherStatus.temperature.maxTemperatureDisplay}"
                    android:gravity="center"
                    tools:text="32"
                    />

                <ImageView
                    android:id="@+id/iv_status_art"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/art_snow"
                    android:layout_gravity="right"
                    />

                <TextView
                    android:id="@+id/tv_min_temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:textSize="@dimen/text_min_temperature_detail"
                    android:text="@{weatherStatus.temperature.minTemperatureDisplay}"
                    android:gravity="center"
                    tools:text="28" />

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="@dimen/text_heading_2x"
                    android:text="@{weatherStatus.weather.description}"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:textColor="@android:color/black"
                    android:maxLines="2"
                    android:ellipsize="end"
                    tools:text="Snow" />

            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:layout_marginTop="@dimen/margin_medium_2">

                <TextView
                    android:id="@+id/lbl_humidity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="@dimen/text_regular_3x"
                    android:text="@string/lbl_humidity"
                    android:gravity="right"
                    />

                <TextView
                    android:id="@+id/tv_humidity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="@dimen/text_heading_1x"
                    android:text="@{weatherStatus.humidityDisplay}"
                    android:textColor="@android:color/black"
                    tools:text="99 %" />

                <TextView
                    android:id="@+id/lbl_pressure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="@dimen/text_regular_3x"
                    android:text="@string/lbl_pressure" />

                <TextView
                    android:id="@+id/tv_pressure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="@dimen/text_heading_1x"
                    android:text="@{weatherStatus.pressureDisplay}"
                    android:textColor="@android:color/black"
                    tools:text="1023 hPa" />

                <TextView
                    android:id="@+id/lbl_wind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="@dimen/text_regular_3x"
                    android:text="@string/lbl_wind" />

                <TextView
                    android:id="@+id/tv_wind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="@dimen/text_heading_1x"
                    android:text="@{weatherStatus.windSpeedDisplay}"
                    android:textColor="@android:color/black"
                    tools:text="3 km/h SE" />

            </GridLayout>

        </LinearLayout>

    </ScrollView>

</layout>